<Window x:Class="PersonalFinanceManager.ToDoDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:toDoListApp="clr-namespace:PersonalFinanceManager"
        Title="Expenses Details"
        ResizeMode="NoResize"
        mc:Ignorable="d" Height="540" Width="800">
    <Window.Resources>
        <Style x:Key="ModernTextBox" TargetType="{x:Type TextBox}">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="10,0,10,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#BBBBBB"/>
            <Setter Property="Background" Value="#FFFFFF"/>
        </Style>

        <Style x:Key="ModernButton" TargetType="{x:Type Button}">
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="#2E86C1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" 
                               BorderBrush="{TemplateBinding BorderBrush}" 
                               BorderThickness="{TemplateBinding BorderThickness}"
                               CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1A5276"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#154360"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernComboBox" TargetType="{x:Type ComboBox}">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="8,0,8,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#BBBBBB"/>
            <Setter Property="Background" Value="#FFFFFF"/>
        </Style>

        <Style x:Key="ModernDatePicker" TargetType="{x:Type DatePicker}">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="8,0,8,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#BBBBBB"/>
            <Setter Property="Background" Value="#FFFFFF"/>
        </Style>

        <Style x:Key="HeaderText" TargetType="{x:Type TextBlock}">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style x:Key="ListViewHeaderStyle" TargetType="{x:Type GridViewColumnHeader}">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="10,0,10,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="#F0F7FC"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderBrush" Value="#BBBBBB"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E1EFF7"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with Nav Buttons -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" 
                    Content="Back" 
                    Style="{StaticResource ModernButton}"
                    Click="BackButton_Click" 
                    Width="100"
                    Margin="0,0,10,0"/>

            <Label Grid.Column="1" 
                   Name="TodoName" 
                   FontSize="22" 
                   FontWeight="SemiBold" 
                   Foreground="#333333"
                   VerticalAlignment="Center" 
                   Margin="10,0"/>

            <Button Grid.Column="2" 
                    Content="Add Item" 
                    Style="{StaticResource ModernButton}"
                    Click="AddItemButton_Click" 
                    Width="120"
                    Margin="0,0,10,0"/>

            <Button Grid.Column="3" 
                    Content="Remove List" 
                    Style="{StaticResource ModernButton}"
                    Click="ListRemoveButton_Click" 
                    Width="120"/>
        </Grid>

        <!-- Search Controls -->
        <Border Grid.Row="1" 
                Background="#F0F7FC" 
                BorderBrush="#2E86C1" 
                BorderThickness="1" 
                CornerRadius="4" 
                Padding="15" 
                Margin="0,15,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Labels -->
                <Label Grid.Column="0" Grid.Row="0" 
                       Content="Search" 
                       FontSize="14"
                       FontWeight="Medium"
                       Foreground="#333333"
                       Margin="0,0,0,5"/>

                <Label Grid.Column="1" Grid.Row="0" 
                       Content="Status" 
                       FontSize="14"
                       FontWeight="Medium"
                       Foreground="#333333"
                       Margin="0,0,0,5"/>

                <Label Grid.Column="2" Grid.Row="0" 
                       Content="Date" 
                       FontSize="14"
                       FontWeight="Medium"
                       Foreground="#333333"
                       Margin="0,0,0,5"/>

                <!-- Input Controls -->
                <TextBox Grid.Column="0" Grid.Row="1" 
                         Name="SearchText" 
                         Style="{StaticResource ModernTextBox}" 
                         Margin="0,0,10,0"/>

                <ComboBox Grid.Column="1" Grid.Row="1" 
                          Name="Status" 
                          Style="{StaticResource ModernComboBox}" 
                          Margin="0,0,10,0">
                    <ComboBoxItem Content="All" IsSelected="True" />
                    <ComboBoxItem Content="Price (todo)" />
                    <ComboBoxItem Content="Description (todo)" />
                </ComboBox>

                <DatePicker Grid.Column="2" Grid.Row="1" 
                            Name="DatePicker" 
                            Style="{StaticResource ModernDatePicker}" 
                            Margin="0,0,10,0"/>

                <!-- Action Buttons -->
                <Button Grid.Column="3" Grid.Row="1" 
                        Content="🔍" 
                        Style="{StaticResource ModernButton}"
                        Click="SearchButton_Click" 
                        Width="45"
                        Margin="0,0,10,0"/>

                <Button Grid.Column="4" Grid.Row="1" 
                        Content="Clear" 
                        Style="{StaticResource ModernButton}"
                        Click="ClearButton_Click" 
                        Width="80"/>
            </Grid>
        </Border>

        <!-- Delete Selected Item Button -->
        <Button Grid.Row="2" 
                Content="Delete Selected Item" 
                Style="{StaticResource ModernButton}"
                Click="RemoveItemButton_Click" 
                Width="180"
                HorizontalAlignment="Right"
                Margin="0,0,0,10"/>

        <!-- Expenses List -->
        <Border Grid.Row="3" 
                BorderBrush="#2E86C1" 
                BorderThickness="1" 
                CornerRadius="4">
            <ListView Name="expensesItemsListView"
                      IsSynchronizedWithCurrentItem="True"
                      toDoListApp:GridViewSort.AutoSort="True"
                      toDoListApp:GridViewSort.SortGlyphAscending="/Content/up.png"
                      toDoListApp:GridViewSort.SortGlyphDescending="/Content/down.png"
                      BorderThickness="0">
                <ListView.View>
                    <GridView>
                        <GridViewColumn toDoListApp:GridViewSort.PropertyName="Name" 
                                        Header="Name" 
                                        Width="180" 
                                        DisplayMemberBinding="{Binding Name}">
                            <GridViewColumn.HeaderContainerStyle>
                                <Style BasedOn="{StaticResource ListViewHeaderStyle}" 
                                       TargetType="{x:Type GridViewColumnHeader}"/>
                            </GridViewColumn.HeaderContainerStyle>
                        </GridViewColumn>

                        <GridViewColumn toDoListApp:GridViewSort.PropertyName="BuyDate"  
                                        Header="Buy Date" 
                                        Width="180" 
                                        DisplayMemberBinding="{Binding BuyDate}">
                            <GridViewColumn.HeaderContainerStyle>
                                <Style BasedOn="{StaticResource ListViewHeaderStyle}" 
                                       TargetType="{x:Type GridViewColumnHeader}"/>
                            </GridViewColumn.HeaderContainerStyle>
                        </GridViewColumn>

                        <GridViewColumn toDoListApp:GridViewSort.PropertyName="Price" 
                                        Header="Price"  
                                        Width="180" 
                                        DisplayMemberBinding="{Binding Price}">
                            <GridViewColumn.HeaderContainerStyle>
                                <Style BasedOn="{StaticResource ListViewHeaderStyle}" 
                                       TargetType="{x:Type GridViewColumnHeader}"/>
                            </GridViewColumn.HeaderContainerStyle>
                        </GridViewColumn>

                        <GridViewColumn toDoListApp:GridViewSort.PropertyName="Description" 
                                        Header="Description" 
                                        Width="200" 
                                        DisplayMemberBinding="{Binding Description}">
                            <GridViewColumn.HeaderContainerStyle>
                                <Style BasedOn="{StaticResource ListViewHeaderStyle}" 
                                       TargetType="{x:Type GridViewColumnHeader}"/>
                            </GridViewColumn.HeaderContainerStyle>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
                <ListView.ItemContainerStyle>
                    <Style TargetType="{x:Type ListViewItem}">
                        <Setter Property="Padding" Value="10,8"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="BorderBrush" Value="#EEEEEE"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F0F7FC"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#E1EFF7"/>
                                <Setter Property="Foreground" Value="#333333"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>
        </Border>
    </Grid>
</Window>