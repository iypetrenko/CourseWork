<Window x:Class="PersonalFinanceManager.UserDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Дані користувача" Height="300" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="ID:"/>
            <TextBox x:Name="txtId" IsReadOnly="True"/>

            <TextBlock Text="Ім'я:" Margin="0,10,0,0"/>
            <TextBox x:Name="txtUsername"/>

            <TextBlock Text="Роль:" Margin="0,10,0,0"/>
            <ComboBox x:Name="cmbRole"/>

            <Button Content="Зберегти" Click="BtnSave_Click" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>