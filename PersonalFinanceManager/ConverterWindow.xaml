<Window x:Class="PersonalFinanceManager.ConverterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PersonalFinanceManager"
        mc:Ignorable="d"
        Title="Currency Converter" Width="800" Height="500" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style x:Key="ModernTextBox" TargetType="{x:Type TextBox}">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="10,0,10,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#BBBBBB"/>
            <Setter Property="Background" Value="#FFFFFF"/>
        </Style>

        <Style x:Key="ModernComboBox" TargetType="{x:Type ComboBox}">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="10,0,10,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#BBBBBB"/>
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="MaxDropDownHeight" Value="150"/>
        </Style>

        <Style x:Key="ModernButton" TargetType="{x:Type Button}">
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="#2E86C1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" 
                               BorderBrush="{TemplateBinding BorderBrush}" 
                               BorderThickness="{TemplateBinding BorderThickness}"
                               CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1A5276"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#154360"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Currency Converter" 
                   FontSize="24" 
                   FontWeight="SemiBold" 
                   Foreground="#333333" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>

        <!-- Display Converted Currency -->
        <Border Grid.Row="1" 
                Background="#F0F7FC" 
                CornerRadius="4" 
                Padding="20" 
                Margin="0,0,0,20">
            <StackPanel>
                <Label Content="Конвертована валюта" 
                       FontSize="16" 
                       FontWeight="SemiBold" 
                       Foreground="#333333" 
                       HorizontalAlignment="Center"
                       HorizontalContentAlignment="Center"/>
                <Label Name="lblCurrency" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Foreground="#2E86C1" 
                       HorizontalAlignment="Center"
                       HorizontalContentAlignment="Center"
                       Margin="0,10,0,0"/>
            </StackPanel>
        </Border>

        <!-- Converter Controls -->
        <Border Grid.Row="2" 
                Background="White" 
                BorderBrush="#2E86C1" 
                BorderThickness="1" 
                CornerRadius="4" 
                Padding="20" 
                Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Labels -->
                <Label Grid.Column="0" Grid.Row="0" 
                       Content="Введіть суму:" 
                       FontSize="14" 
                       Foreground="#333333" 
                       Margin="0,0,0,10"/>

                <Label Grid.Column="1" Grid.Row="0" 
                       Content="З:" 
                       FontSize="14" 
                       Foreground="#333333" 
                       Margin="0,0,0,10"/>

                <Label Grid.Column="2" Grid.Row="0" 
                       Content="На:" 
                       FontSize="14" 
                       Foreground="#333333" 
                       Margin="0,0,0,10"/>

                <!-- Input Controls -->
                <TextBox Grid.Column="0" Grid.Row="1" 
                         Name="txtCurrency" 
                         Style="{StaticResource ModernTextBox}" 
                         PreviewTextInput="NumberValidationTextBox" 
                         Margin="0,0,10,0"/>

                <ComboBox Grid.Column="1" Grid.Row="1" 
                          Name="cmbFromCurrency" 
                          Style="{StaticResource ModernComboBox}" 
                          Margin="0,0,10,0"/>

                <ComboBox Grid.Column="2" Grid.Row="1" 
                          Name="cmbToCurrency" 
                          Style="{StaticResource ModernComboBox}" 
                          Margin="0,0,0,0"/>
            </Grid>
        </Border>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0,0,0,20">
            <Button Name="Convert" 
                    Content="Конвертувати" 
                    Style="{StaticResource ModernButton}" 
                    Width="150" 
                    Click="Convert_Click" 
                    Margin="0,0,10,0"/>

            <Button Name="Clear" 
                    Content="Очистити" 
                    Style="{StaticResource ModernButton}" 
                    Width="150" 
                    Click="Clear_Click"/>
        </StackPanel>

        <!-- Back Button -->
        <Button Grid.Row="4" 
                Name="Back" 
                Content="Назад" 
                Style="{StaticResource ModernButton}" 
                Width="150" 
                HorizontalAlignment="Center" 
                Click="BackButton_Click"/>
    </Grid>
</Window>