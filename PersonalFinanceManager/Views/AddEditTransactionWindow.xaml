<Window x:Class="PersonalFinanceManager.Views.AddEditTransactionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add/Edit Transaction" Height="300" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Amount:"/>
            <TextBox Text="{Binding Amount, StringFormat=N2}"/>

            <TextBlock Text="Date:" Margin="0,10,0,0"/>
            <DatePicker SelectedDate="{Binding Date}"/>

            <TextBlock Text="Category:" Margin="0,10,0,0"/>
            <ComboBox ItemsSource="{Binding Categories}" 
                      DisplayMemberPath="Name"
                      SelectedItem="{Binding SelectedCategory}"/>

            <TextBlock Text="Type:" Margin="0,10,0,0"/>
            <ComboBox ItemsSource="{Binding TransactionTypes}" 
                      SelectedItem="{Binding SelectedType}"/>

            <Button Content="Save" Command="{Binding SaveCommand}" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>